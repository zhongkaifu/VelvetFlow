        "query": {
          "type": "string",
          "description": "用户的自然语言查询需求"
        },
        "search_limit": {
          "type": "integer",
          "default": 5,
          "description": "搜索引擎返回结果数量上限"
        },
        "llm_provider": {
          "type": "string",
          "default": "openai/gpt-4o-mini",
          "description": "用于判断是否继续抓取的 LLM provider"
