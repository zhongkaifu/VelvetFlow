      },
      "required": [
        "query"
      ]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "description": "整体抓取状态（ok/partial/error/not_found）"
        },
        "summary": {
          "type": "string",
          "description": "对抓取结果的汇总说明"
        },
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "snippet": {
                "type": "string"
              },
              "scrape": {
                "type": "object",
                "additionalProperties": true,
                "description": "crawl4ai 抓取返回的原始结果"
              }
            }
          }
        }
      },
      "required": [
        "status",
        "summary",
        "results"
      ]
    },
    "enabled": true
  },
